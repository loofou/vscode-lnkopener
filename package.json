{
  "name": "lnkopener",
  "displayName": "LnkOpener",
  "description": "A simple extension to open .lnk files in windows in their respective programs.",
  "version": "0.1.0",
  "publisher": "loofou",
  "engines": {
    "vscode": "^1.105.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/loofou/vscode-lnkopener"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lnkopener.openLnk",
        "title": "Open .lnk target"
      }
    ],
    "languages": [
      {
        "id": "lnk",
        "extensions": [
          ".lnk"
        ],
        "aliases": ["lnk"],
        "configuration": "./language-configuration.json"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "lnkopener.openLnk",
          "when": "resourceExtname == .lnk",
          "group": "navigation"
        }
      ]
    }
    ,
    "customEditors": [
      {
        "viewType": "lnkopener.lnkPreview",
        "displayName": "LnkOpener preview",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "*.lnk"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
